pipeline {
    agent { label 'deploy' }
    stages {
        stage('Build') {
            steps {
                sh '{ sudo yum install -y httpd }'
                sh '{ sudo sleep 5 }'
                sh '{ sudo echo $(hostname) >>/var/www/html/index.html }'
                sh '{ sudo service httpd restart }'
            }
        }
    }
}
